{
  "manifest_version": 3,
  "name": "Discord Friend Network",
  "version": "1.0.0",
  "permissions": ["storage"],
  "host_permissions": ["https://discord.com/*"],
  "content_scripts": [
    {
      "matches": ["https://discord.com/*"],
      "js": ["hook.js"],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": ["https://discord.com/*"],
      "js": ["storage.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "64": "icons/icon64.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Discord Friend Network"
  }
}
